                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageViewRuneDarkness"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/darkness" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Darkness :"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/TextViewRuneDarkness"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutRunEarth"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageViewRuneEarth"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/earth" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Earth :"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/TextViewRuneEarth"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
